<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/emailpharmacy"
            android:layout_width="324dp"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="EmailPharmacy"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/adresspharmacy"
            android:layout_width="324dp"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="AdressPharmacy"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passwordpharmacy"
            android:layout_width="324dp"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="PasswordPharmacy"
            android:inputType="textPersonName"
            android:password="true" />

        <Button
            android:id="@+id/buttoncreatefarmacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="Crear Farmacia" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="396dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <EditText
            android:id="@+id/emailnurse"
            android:layout_width="324dp"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="EmailInfermero"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/namenurse"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="NombreInfemero"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passnurse"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="ContraseÃ±aInfermero"
            android:inputType="date|textUri|textShortMessage|textLongMessage|textAutoCorrect|numberSigned|textVisiblePassword|textWebEditText|textMultiLine|textNoSuggestions|textFilter|number|datetime|textWebEmailAddress|textPersonName|text|textPhonetic|textCapSentences|textPassword|textAutoComplete|textImeMultiLine|textPostalAddress|numberDecimal|textEmailAddress|numberPassword|textCapWords|phone|textEmailSubject|textCapCharacters|time|textWebPassword"
            android:password="true" />

        <EditText
            android:id="@+id/pricenurse"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="10dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:hint="Precio/hora"
            android:inputType="number" />

        <Button
            android:id="@+id/crearinfermero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="Crear Infermero" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>